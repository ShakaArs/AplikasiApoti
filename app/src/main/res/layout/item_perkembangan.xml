<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:layout_marginRight="20dp"
    android:layout_marginLeft="20dp"
    app:cardCornerRadius="15dp"
    tools:context=".ProgressFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_item_photo"
            android:layout_width="300px"
            android:layout_height="300px"
            android:scaleType="centerCrop"
            android:src="@drawable/oniel" />

        <TextView
            android:id="@+id/tv_item_kategori"
            android:layout_width="94dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="154dp"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="1dp"
            android:layout_marginRight="0dp"
            android:layout_marginBottom="8dp"
            android:layout_toEndOf="@+id/img_item_photo"
            android:textColor="#000000"
            android:textSize="10sp"
            android:textStyle="bold"
            app:fontFamily="@font/poppins_medium" />

        <TextView
            android:id="@+id/tv_item_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="8dp"
            android:layout_toEndOf="@+id/img_item_photo"
            android:text="Data Perkembangan"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold"
            app:fontFamily="@font/poppins_bold" />

        <TextView
            android:id="@+id/tv_item_nama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_item_data"
            android:layout_marginStart="13dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="4dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="8dp"
            android:layout_toEndOf="@+id/img_item_photo"
            android:textColor="#000000"
            android:textSize="16sp"
            app:fontFamily="@font/poppins_semibold" />


        <TextView
            android:id="@+id/nik_user"
            android:layout_width="176dp"
            android:layout_height="53dp"
            android:layout_below="@+id/tv_item_data"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="48dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="8dp"
            android:layout_toEndOf="@+id/img_item_photo"
            android:textColor="#000000"
            android:textSize="16sp"
            app:fontFamily="@font/poppins_semibold" />

        <Button
            android:id="@+id/btn_detail"
            android:layout_width="77dp"
            android:layout_height="34dp"
            android:layout_below="@+id/tv_item_nama"
            android:layout_marginStart="-95dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="8dp"
            android:layout_toEndOf="@+id/img_item_photo"
            android:backgroundTint="#249E97"
            android:text="Detail"
            android:textColor="#F8F2F2"
            android:textSize="7sp"
            app:fontFamily="@font/poppins_semibold" />

        <ImageButton
            android:id="@+id/delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="90dp"
            android:layout_marginRight="1dp"
            android:background="#fff"
            android:contentDescription="@string/Akun"
            android:minWidth="48dp"
            android:minHeight="48dp"
            app:srcCompat="@drawable/ic_delete" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>